<Page x:Class="ShopWpfApp.View.Pages.Tovar.TovarAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopWpfApp.View.Pages.Tovar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      
      Title="TovarAddEditPage">

    <StackPanel HorizontalAlignment="Center" Width="400" VerticalAlignment="Center">
        <TextBlock Text="Наименование" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic" />
        <TextBox Text="{Binding Name}" />
        
        <TextBlock Text="Количество" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic" />
        <TextBox Text="{Binding Amount}" />
        <TextBlock Text="Цена" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic" />
        <TextBox Text="{Binding Price}"/>
        

        <Button Click="SaveClick" Content="Сохранить" Background="#FFF3C98B" Foreground="Black" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic" />

    </StackPanel>
</Page>
