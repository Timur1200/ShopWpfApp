<Page x:Class="ShopWpfApp.View.Pages.Provider.ProviderAddEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopWpfApp.View.Pages.Provider"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProviderAddEditPage">

    <StackPanel HorizontalAlignment="Center" Width="400" VerticalAlignment="Center">
        <TextBlock Text="ФИО" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic" />
        <TextBox Text="{Binding Name}" />
        <TextBlock  Text="Телефон" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic"/>
        <TextBox  Text="{Binding Phone}" />

        <Button Click="SaveClick" Content="Сохранить" Background="#FFF3C98B" Foreground="Black" FontFamily="Arimo" FontWeight="Bold" FontStyle="Italic" />

    </StackPanel>
</Page>
